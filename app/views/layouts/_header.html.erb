<nav class="navbar navbar-light bg-light d-flex">
  <div class="container">
    <div class="logo">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= fa_stacked_icon "camera inverse", base: "circle"%>
        <%= t "title" %>
      <% end %>
    </div>
    <div class="m-auto">
      <%= form_tag finds_path, method: :get, class: "form-inline search-form" do  %>
        <%= search_field_tag :search, params[:search], placeholder: t(".search_holder"), class: "form-control mr-sm-2" %>
        <div class="input-group-btn">
          <%= button_tag class: "input-group-text" ,id: "btnGroupAddon" do %>
            <i class="fa fa-search"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="user-section">
      <%= link_to "#" do %>
        <i class="fa fa-compass"></i>
      <% end %>

      <% if user_signed_in? %>

        <%= link_to user_notifications_path current_user do %>
          <i class="fa fa-bell" id="open_notification"></i>
          <%= render "notifications/counter", counter: current_user.notifications.count %>
        <% end %>

        <%= link_to user_path current_user do %>
          <i class="fa fa-user"></i>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-sign-in"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>
