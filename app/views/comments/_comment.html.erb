<div class="comment">
    <%= image_tag comment.user.avatar.to_s %>
  <div class="comment-content">
    <%= link_to comment.user.name, comment.user %>

    <%= comment.content %></br>

    <span class="timestamp">
      <%= time_ago_in_words comment.created_at %>

      <% if comment.user == current_user %>
        <%= link_to t("btn_del"), post_comment_path(post, comment),
          method: :delete, data: { confirm: t("del_confirm") }, class: "delete-comment" %>
      <% end %>
    </span>
  </div>
</div>
